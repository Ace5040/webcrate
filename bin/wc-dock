#!/bin/bash

SCRIPT=`realpath $0`
SCRIPTPATH=`dirname $SCRIPT`

cd $SCRIPTPATH/..

source .env

if [ $# -eq 0 ]; then

    docker exec -it webcrate-core fish

else

    if [[ $WEBCRATE_MODE == "PRODUCTION" ]]; then

        docker exec -it webcrate-core sudo --user ${1} bash -c "[ -d \"/sites/${1}\" ] && export HOME=/sites/${1}; cd ~; fish"

    else

        docker exec -it webcrate-core sudo --user dev bash -c "[ -d \"/sites/${1}\" ] && export HOME=/sites/${1}; cd ~; fish"

    fi

fi
